<link rel="stylesheet" href="/css/home.css">
<link rel="stylesheet" href="/css/chat_box.css">

<% if(locals.user){ %>
    <div id="home-container">
        <div id="others"></div>
        <div id="feed-posts">
            <form action="/posts/create" id="new-post-form" method="POST">
                <textarea name="content" cols="30" rows="3" placeholder="Type Here..." required></textarea>
                <input type="submit" value="Post">
            </form>
                
            <div id="posts-list-container">
                <ul>
                    <% for(post of posts){ %>
                                
                        <%- include('_post') -%>
                                
                    <%} %>
                </ul>
            </div>
        </div>
                
                
        <div id="user-friends">
            <h4>Friends</h4>
            <% for(u of addedfriends){%>
                <!-- for displaying user's friend list -->
                <p>
                    <a href="/users/profile/<%= u.id %>"><%= u.name %></a><br><br>
                </p>
            <% } %>

            <h4>Users</h4>

            <% for(u of all_users) {%>
                <!-- for displaying user profile link -->
                <p>           
                            
                    <a href="/users/profile/<%= u.id %>"><%= u.name %></a>
                </p>
            <% } %>
        </div>
       <%- include('_chat_box') -%>
    </div>
    <% } else { %>
        <link rel="stylesheet" href="/css/signin.css">
        <div class="login">
            <div class="first-half">
                <div class="signin-box">
                    <h1>Login to Your Account</h1>
                    <div class="social">
                        <a href="/users/auth/google">Sign In with google</a>
                    </div>
                    <div class="or">
                        <p>OR</p>
                    </div>
                    <div class="fill">
                        <form action="/users/create-session" method="POST">
                            <div class="input">
                                <input  type="email" name="email" placeholder="Email"  required>
                            </div>
                            <div class="input">
                                <input  type="password" name="password" placeholder="Password"  required>
                            </div>
                            <div class="btn">
                                <input  type="submit" value="Sign In">
                            </div>
                        </form>
                    </div>
                    <div class="link">
                        <a href="/users/sign-up">Create New Account</a>
                    </div>
                </div>
            </div>
        </div>
    <%}%>
