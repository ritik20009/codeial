<link rel="stylesheet" href="/css/_post.css">
<li id="post-<%= post._id %>">

    <div class="post-box">
        <div class="post-box-header">
            <img src="<%=post.user.avatar %>" alt="<%=post.user.name%>">
            <p><%=post.user.name %></p>
            <% if (locals.user && locals.user.id == post.user.id){ %>
                <small>
                    <a class="delete-post-button"  href="/posts/destroy/<%= post.id %>"><i class="fas fa-trash-alt"></i></a>
                </small>
            <% } %>
        </div>
        <div class="post-content">
            <div class="post-text">
                <%=post.content %>
            </div>
            <div class="post-pic">
            </div>
        </div>

        <!-- display the likes of this post, if the user is logged in, then show the link to toggle likes, else, just show the count -->

        <div class="likes">
            <% if (locals.user){ %>
                <hr>
                <a class="toggle-like-button" data-likes="<%= post.likes.length %>" href="/likes/toggle/?id=<%=post._id%>&type=Post">
                        <%= post.likes.length %> Likes
                </a>
                <hr>
            <% }else{ %>
                <hr>
                <%= post.likes.length %> Likes
                <hr>
            <% } %>
        </div>
        <div class="post-comments">
            <% if (locals.user){ %>
                <!-- let's give an id to the new comment form, we'll also need to make the same changes in home_posts.js where we're adding a post to the page -->
                <div class="comment-fill">
                    <form id="post-<%= post._id %>-comments-form" action="/comments/create" method="POST">
                        <div class="comm-input">
                            <img src="<%=user.avatar %>">
                            <input type="text" name="content" placeholder="Type Here to add comment..." required>
                            <input type="hidden" name="post" value="<%= post._id %>" >
                            <span class="btn">
                                <input type="submit" value="Add Comment">
                            </span>
                        </div>
                    </form>
                </div>

            <% } %>

                <div class="post-comments-list">
                    <ul id="post-comments-<%= post._id %>">
                        <% for (comment of post.comments){%>

                            <%- include('_comment') -%>
                            
                        
                        <%} %>
                    </ul>
                </div>
        </div>
    </div>
    
</li>